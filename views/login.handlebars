<div class="row">
    <div class="col s12 m4 offset-m4">
        <div class="card-action red white-text transparent">
            <h3 style="text-align: center;">Welcome Back</h3>
            <h6 style="text-align: center;">Please enter your details</h6>
        </div>
        <div class="card-action red white-text transparent">

        <h2>Login</h2>
            </div>

        <form class="form login-form">
            <div class="form-group">
                <label for="email-login">email:</label>
                <input class="form-input white-text" type="text" id="email-login" />
            </div>
    
            <div class="form-group">
                <label for="password-login">password:</label>
                <input class="form-input white-text" type="password" id="password-login" />
            </div>
            <div class="form-group center-align">
                <button class="btn btn-primary red" type="submit">Sign in</button>
            </div>
        </form>
    </div>
    <div class="col s12 m4 offset-m4">
     <div class="card-action red white-text transparent">

        <h2>Signup</h2>

        <form class="form signup-form">
            <div class="form-group">
                <label for="username-signup">name:</label>
                <input class="form-input white-text" type="text" id="username-signup" />
            </div>
            <div class="form-group">
                <label for="email-signup">email:</label>
                <input class="form-input white-text" type="text" id="email-signup" />
            </div>
            <div class="form-group">
                <label for="password-signup">password:</label>
                <input class="form-input white-text" type="password" id="password-signup" />
            </div>
            <div class="form-group center-align">
                <button class="btn btn-primary" type="submit">signup</button>
            </div>
        </form>
    </div>
